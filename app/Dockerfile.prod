# pull official base image
FROM python:3.11.4-slim-bullseye

# set work directory
WORKDIR /usr/src/app

# set environment variables
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

# install system dependencies
RUN apt-get update && apt-get --no-install-recommends install -y build-essential --purge cron \
    dos2unix \
    ffmpeg \
    netcat \
    procps\
    rsyslog\
    systemd \
    # clean cache
    && apt-get clean 


    

# install dependencies
COPY ./requirements.txt .
RUN pip install --upgrade pip && \
    pip install -r requirements.txt






# copy project
COPY . .

# installer gunicorn pour la prod
RUN pip install gunicorn

# collectstatic pour Django (ignorer les erreurs si settings non configur√©)
RUN python manage.py collectstatic --noinput || true


# copy entrypoint.prod.sh
COPY ./entrypoint.prod.sh ./entrypoint.prod.sh
RUN dos2unix ./entrypoint.prod.sh && chmod +x ./entrypoint.prod.sh

# utiliser entrypoint.prod.sh comme entrypoint
ENTRYPOINT ["/usr/src/app/entrypoint.prod.sh"]
